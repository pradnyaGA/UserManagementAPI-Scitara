		{
			"name": "Get All Users -Schema Validation",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const Ajv = require('ajv');",
							"const ajv = new Ajv();",
							"const userSchema = {",
							"  type: 'object',",
							"  required: ['id','name','email'],",
							"  properties: {",
							"    id: { type: 'number' },",
							"    name: { type: 'string' },",
							"    email: { type: 'string' }",
							"  }",
							"};",
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test('Response matches schema', function () {",
							"    const validate = ajv.compile(userSchema);",
							"    pm.response.json().forEach(user => pm.expect(validate(user)).to.be.true);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{authToken}}"
					}
				],
				"url": {
					"raw": "http://localhost:3000/users",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"users"
					]
				}
			},
			"response": []
		},
